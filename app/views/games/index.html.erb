
<p id="notice"><%= @notice %></p>

<h1>Games</h1>

<table class="table-dark table-striped">
  <thead>
    <tr>
    <th>Day</th>
    <th>Start time</th>
    <th>Venue</th>
    <th>Tour</th>
      <th>Name</th>
      <th>Notes</th>
      <% if current_user %>
        <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><h1><%= game.day %></h1></td>
        <td><%= game.start_time %></td>
        <td><%= game.venue.name %></td>
        <td><%= game.tour.name %></td>
        <td><%= game.name %></td>
        <td><%= game.notes %></td>
        <% if current_user %>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
<%= link_to 'New Venue', new_venue_path %>
<%= link_to 'New Tour', new_tour_path %>

<p id="notice"><%= notice %></p>

<h1>Roles</h1>

<table>
  <thead>
    <tr>
      <th>Role</th>
      <th>User</th>
      <th>Object</th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.role_type.role_name %></td>
        <td><%= role.user.name %></td>
        <td><%= role.role_type.object.name %></td>
        </tr>
    <% end %>
  </tbody>
</table>


<p id="notice"><%= notice %></p>

<h1>Venues</h1>

<table class="table-dark table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Notes</th>
      <% if current_user %>
      <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <td><%= venue.name %></td>
        <td><%= venue.location %></td>
        <td><%= venue.notes %></td>
        <% if current_user %>
        <td><%= link_to 'Show', venue %></td>
        <td><%= link_to 'Edit', edit_venue_path(venue) %></td>
        <td><%= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= image_tag @map_temp %>
<br/>

<%= link_to 'New Venue', new_venue_path %>

<p id="notice"><%= notice %></p>

<h1>Tours</h1>

<table class="table-dark table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Notes</th>
      <th>User</th>
      <% if current_user %>
        <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @tours.each do |tour| %>
      <tr>
        <td><%= tour.name %></td>
        <td><%= tour.notes %></td>
        <td><%= tour.user.name %></td>
        <% if current_user %>
        <td><%= link_to 'Show', tour %></td>
        <td><%= link_to 'Edit', edit_tour_path(tour) %></td>
        <td><%= link_to 'Destroy', tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

